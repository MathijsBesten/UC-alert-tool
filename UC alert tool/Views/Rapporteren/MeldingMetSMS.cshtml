@using UC_alert_tool.Models
@model rapporterenMetSMS
@{
    ViewBag.Title = "Nieuwe melding Met SMS";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h2>Storing melden en een sms alert sturen</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Partial("_MeldingPartial")
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>sms bericht</h4>
            </div>
            <div class="panel-body">
                <!--Start of email part-->
                <div class="form-group">
                    <label class="control-label col-md-2">sms bericht</label>
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.smsbericht, 8, 50, new { htmlAttributes = new { @class = "form-control", } })
                        <div>@Html.ValidationMessageFor(model => model.smsbericht, "", new { @class = "text-danger" })</div>

                    </div>
                    <div class="col-md-offset-2 col-md-10 maxWidth">
                        <p id="totalCharacters">160/160 karakters</p>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Storing maken en sms verzenden" class="btn btn-success" id="submitbutton" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
}
@section Scripts {
    @Scripts.Render("~/Scripts/projectScripts/generalscript.js")
    @Scripts.Render("~/bundles/jqueryval")
}