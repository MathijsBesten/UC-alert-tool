@using UC_alert_tool.Models
@model rapporterenMetSMS
<div class="panel panel-default">
    <div class="panel-heading">
        <h4>sms bericht</h4>
    </div>
    <div class="panel-body">
        <!--Start of email part-->
        <div class="form-group">
            <label class="control-label col-md-2">sms bericht</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.smsbericht, 8, 50, new { htmlAttributes = new { @class = "form-control", } })
                <div>@Html.ValidationMessageFor(model => model.smsbericht, "", new { @class = "text-danger" })</div>
            </div>
            <div class="col-md-offset-2 col-md-10 maxWidth smallInformation">
                <p id="totalCharacters">160/160 karakters</p>
                <p id="totalSMSForOneMessage">1 Bericht</p>
            </div>
        </div>
    </div>
</div>