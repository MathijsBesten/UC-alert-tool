
@{
    ViewBag.Title = "Nieuwe melding";
}

<h2>Nieuwe melding maken</h2>
<div class="panel panel-default">
    <div class="panel-heading">Melding</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <form role="form">
                    <div class="form-group">
                        <label>Titel</label>
                        <input class="form-control" placeholder="Titel van melding" />
                    </div>
                    <div class="form-group">
                        <label>Product</label>
                        <select class="form-control">
                            <option value="1">Office 365</option>
                            <option value="2">Haal opties uit database...</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Inhoud</label>
                        <input class="form-control" placeholder="Informatie storing" />
                    </div>
                    <div class="form-group">
                        <label>Begin datum</label>
                        <input type="text" class="form-control" value=@DateTime.Now.Date.ToString()>
                    </div>
                    <div class="form-group">
                        <label>Begin tijd</label>
                        <input type="text" class="form-control" value=@DateTime.Now.ToString("HH:mm")>
                    </div>
                    <div class="form-group">
                        <label>
                            <input id="isGeslotenCheckbox" type="checkbox" value="" /> storing is afgelopen
                        </label>
                    </div>
                    <div class="form-group">
                        <label>Eind datum</label>
                        <input disabled id="einddatum"  type="text" class="form-control" value=@DateTime.Now.Date.ToString()>
                    </div>
                    <div class="form-group">
                        <label>Eind tijd</label>
                        <input disabled id="eindtijd"  type="text" class="form-control" value=@DateTime.Now.ToString("HH:mm")>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/projectScripts/generalscript.js")
}