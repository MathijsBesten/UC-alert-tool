@using Microsoft.AspNet.Identity
@using UC_alert_tool.Functions.Time
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink(GetTime.GetGreetingsmessageBasedOnTimeOfDay() + " " + User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Uitloggen</a></li>
    </ul>
    }
}
