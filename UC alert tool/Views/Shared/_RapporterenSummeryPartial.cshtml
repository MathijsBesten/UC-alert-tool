@using UC_alert_tool.Models
@model Storingen

<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Overzicht</h4>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <label class="control-label col-md-2">Overzicht</label>
            <div class="col-md-10">
                @Html.TextArea("Summeryfield","", 10, 50, new { @readonly = "readonly", htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Storing aanmaken" class="btn btn-success" id="submitbutton" />
            </div>
        </div>
    </div>
</div>

