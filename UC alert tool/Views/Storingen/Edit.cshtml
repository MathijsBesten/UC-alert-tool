@model UC_alert_tool.Models.Storingen

@{
    ViewBag.Title = "Edit";
}

<h2>Storing aanpassen en sluiten</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.Partial("_MeldingPartial")
        @Html.Partial("_partialSMS")
        @Html.Partial("_partialEmail")
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Opslaan" class="btn btn-success" id="submitbuttonedit" />
            </div>
        </div>  
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/projectScripts/generalscript.js")
}
