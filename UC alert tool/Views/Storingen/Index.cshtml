@model IEnumerable<UC_alert_tool.Models.Storingen>

@{
    ViewBag.Title = "Alle storingen";
}

<h2>@ViewBag.Title</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inhoud)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Begindatum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Begintijd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Einddatum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Eindtijd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsGesloten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Inhoud)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Begindatum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Begintijd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Einddatum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Eindtijd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsGesloten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductID)
        </td>
        <td>
            @Html.ActionLink("Aanpassen", "Edit", new { id=item.Id }) 
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
            @Html.ActionLink("Verwijderen", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
