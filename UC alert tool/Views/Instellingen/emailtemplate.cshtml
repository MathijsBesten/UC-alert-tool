
@{
    ViewBag.Title = "emailtemplate";
    @Html.Partial("_SettingsPartial")
 }
<div class="settingsContentWrapper">

    <h2>Email template aanpassen</h2>

    @using (Html.BeginForm("emailtemplate","Instellingen",FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-3">Text handtekening</label>
                <div class="col-md-9">
                    <textarea type="text" name="handtekeningText" rows="8" cols="50">@ViewBag.handtekeningtext</textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Plaatje handtekening</label>
                <div class="col-md-9">
                    <input type="file" accept=".png" name="file" id="file"/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Huidige handtekening</label>
                <div class="col-md-9">
                    <img src="@ViewBag.imagePath" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-9">
                    <input type="submit" value="Opslaan" class="btn btn-default" />
                </div>
            </div>
         </div>
    }
</div>