@{
    ViewBag.Title = "Hangfire";
    @Html.Partial("_SettingsPartial")

}
<div class="settingsContentWrapper">
    <h2>Database instellingen</h2>
    <p>Hier kunt u de instellingen van de database synchronisatie aanpassen </p>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4><b>Gegevens Sharepoint database</b></h4>
            <div class="form-group">
                <label class="control-label col-md-3">Sharepoint URL</label>
                <div class="col-md-9">
                    <input type="text" name="url" value="@ViewBag.sharepointURL" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Sharepoint gebruikersnaam</label>
                <div class="col-md-9">
                    <input type="text" name="username" value="@ViewBag.sharepointusername" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Sharepoint wachtwoord</label>
                <div class="col-md-9">
                    <input type="password" name="password" value="@ViewBag.sharepointpassword" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Sharepoint domain (default 'ucsystems')</label>
                <div class="col-md-9">
                    <input type="text" name="domain" value="@ViewBag.sharepointdomain" />
                </div>
            </div>
            <h4><b>Databases synchroniseren</b></h4>
            <div class="form-group">
                <label class="control-label col-md-3">Interval in uren</label>
                <div class="col-md-9">
                    <input type="number" name="Interval" value="@ViewBag.DatabaseSyncInterval"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Opslaan" class="btn btn-default" />
                </div>
            </div>

        </div>
    }
</div>