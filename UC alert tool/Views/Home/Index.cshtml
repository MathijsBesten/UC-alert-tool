@model IEnumerable<UC_alert_tool.Models.Storing>
@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">@Html.DisplayFor(modelItem => item.Titel)</div>
                <div class="panel-body">@Html.DisplayFor(modelItem => item.inhoud)</div>
                <div class="panel-footer">
                    van @Html.DisplayFor(modelItem => item.begindatum)<br />
                    @if (item.isGesloten == false)
                {
                        @:Tot heden - Geen einddatum bekend
                }
                else
                {
                        @:tot @Html.DisplayFor(modelItem => item.einddatum)
                    }
                </div>
            </div>
        </div>
    }
</div>
