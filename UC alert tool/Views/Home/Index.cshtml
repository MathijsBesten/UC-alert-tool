@model IEnumerable<UC_alert_tool.Models.Storingen>
@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
</div>
@for (int i = 0; i < Model.Count(); i += 3)
{
    <div class="row">
        @foreach (var item in Model.Skip(i).Take(3)) // use 3 if the collumn width is 4 - use 4 if the collomn width is 3
        {
            <div class="col-md-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            @Html.DisplayFor(modelItem => item.Titel)
                            @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                            {
                                <a href="~/storingen/edit/@(item.Id)" class="glyphicon glyphicon-cog pull-right"></a>
                            }
                        </h3>

                    </div>
                    <div class="panel-body">@Html.DisplayFor(modelItem => item.Inhoud)</div>
                    <div class="panel-footer">
                        van @Html.DisplayFor(modelItem => item.Begindatum)<br />
                        @if (item.IsGesloten == false)
                        {
                            @:Tot heden - Geen einddatum bekend
                        }
                        else
                        {
                            @:tot @Html.DisplayFor(modelItem => item.Einddatum)
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}