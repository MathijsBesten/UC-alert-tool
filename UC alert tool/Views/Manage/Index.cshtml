@model UC_alert_tool.Models.IndexViewModel
@{
    ViewBag.Title = "Account beheren";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Verander account instellingen</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Wachtwoord:</dt>
        <dd>           
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Wachtwoord veranderen", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Toevoegen", "SetPassword")
            }
        </dd>
    </dl>
</div>
